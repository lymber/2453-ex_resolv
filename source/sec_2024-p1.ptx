	<!--       c=plot(f, (x,2.75, -->
	<!--       3.25),color="blue",frame=True,transparent=True,aspect_ratio=1) -->
	<!--       multi_graphics([a,(b,(0.15,0.7,0.25,0.25)),(c,(.7,.15,.25,.25))]) -->
	<!--   </input> -->
	<!-- </sage> --></p>
      </solution>
    </exercise>

